<!DOCTYPE html>
<html lang="en">
<%- include('../partials/Header.ejs') %>
<body>
    <%- include('../partials/Loader.ejs') %>
    <div id="page" class="full-page">
        <%- include('../partials/Navbar.ejs') %>
        <main id="content" class="site-main">
            <!-- Inner Banner html start -->
            <section class="inner-banner-wrap">
                <div class="inner-baner-container" style="background-image: url(/assets/images/inner-banner.jpg);">
                    <div class="container">
                        <div class="inner-banner-content">
                            <h1 class="inner-title">My Carts</h1>
                        </div>
                    </div>
                </div>
                <div class="inner-shape"></div>
            </section>
            <!-- Inner Banner html end -->
            <!-- Carts Options html start -->
            <div class="package-section">
                <div class="container-xxl px-5 mx-5">
                    <div class="dashboard-box">
                        <!-- <h3>Select Cart Type</h3> -->
                        <div class="cart-options">
                            <div class="row">
                                <div class="col-md-6 sidebar">
                                    <div class="cart-option-card package-card widget-bg information-content text-center">
                                        <div class="card-icon">
                                            <i class="fas fa-suitcase fa-3x"></i>
                                        </div>
                                        <h4>Package Cart</h4>
                                        <p>View your selected travel packages, including tours and adventures ready for checkout.</p>
                                        <a href="/packageCart" class="button-primary">
                                            View Package Cart
                                        </a>
                                    </div>
                                </div>
                                <div class="col-md-6 sidebar">
                                    <div class="cart-option-card product-card widget-bg information-content text-center">
                                        <div class="card-icon">
                                            <i class="fas fa-shopping-bag fa-3x"></i>
                                        </div>
                                        <h4>Shop Product Cart</h4>
                                        <p>Review your selected travel-related products, such as gear or souvenirs, ready for purchase.</p>
                                        <a href="/product/cart" class="button-primary">
                                            View Shop Product Cart
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Carts Options html end -->
        </main>
        <%- include('../../shared/partials/toaster') %>
        <%- include('../partials/Footer.ejs') %>
    </div>
    <!-- JavaScript -->
    <%- include('../partials/Script.ejs') %>
