<!doctype html>
<html lang="en">
<%- include('../partials/Header') %>
<style>
    /* Overlay for the popup */
    .popup-overlay {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.8);
        z-index: 10500;
    }
    /* Popup container */
    .popup {
        display: none;
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        background: #fff;
        border-radius: 5px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        z-index: 10501;
        max-width: 400px;
        width: 90%;
        padding: 20px;
    }
    /* Show popup and overlay */
    .popup-overlay.show, .popup.show {
        display: block;
    }
    /* Popup header */
    .popup-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 15px;
    }
    .popup-header h5 {
        margin: 0;
        font-size: 1.25rem;
    }
    .popup-close {
        background: none;
        border: none;
        font-size: 1.5rem;
        cursor: pointer;
        color: #6c757d;
    }
    .popup-close:hover {
        color: #343a40;
    }
    /* Popup body */
    .popup-body {
        margin-bottom: 15px;
        font-size: 1rem;
    }
    /* Popup footer */
    .popup-footer {
        display: flex;
        justify-content: flex-end;
        gap: 10px;
    }
    /* Responsive adjustments */
    @media (max-width: 576px) {
        .popup {
            width: 95%;
        }
    }
</style>
<body>
    <div id="container-wrapper">
        <div id="dashboard" class="dashboard-container">
            <%- include('../partials/Navbar') %>
            <%- include('../partials/Sidebar') %>
            <div class="db-info-wrap">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="dashboard-box table-opp-color-box">
                            <div class="header-controls" style="display: flex; flex-direction: row; justify-content: space-between; align-items: center; gap: 10px; margin-bottom: 20px;">
                                <h4 style="margin: 0;">Agent Details</h4>
                                <a href="/new-agent" class="btn btn-primary" style="width: fit-content;" aria-label="Add new user">Add Agent</a>
                            </div>
                            <div class="user-controls" style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px;">
                                <form id="search-form" action="/db-admin-created-agents" method="get" style="flex: 1; margin-right: 20px;">
                                    <div class="form-group" style="display: flex; align-items: center; position: relative;">
                                        <input type="text" name="search" id="search-input" placeholder="Search by agent name" value="<%= search || '' %>" style="width: 70%; padding: 8px 40px 8px 8px; border: 1px solid #ddd; border-radius: 4px; margin-right: 10px;">
                                        <select name="statusFilter" id="status-filter" style="width: 30%; padding: 8px; border: 1px solid #ddd; border-radius: 4px;">
                                            <option value="all" <%= statusFilter === 'all' ? 'selected' : '' %>>All</option>                                       
                                            <option value="Active" <%= statusFilter === 'Active' ? 'selected' : '' %>>Active</option>
                                            <option value="notActive" <%= statusFilter === 'notActive' ? 'selected' : '' %>>Not Active</option>
                                        </select>
                                        <button type="submit" aria-label="Search tour guides" style="position: absolute; right: 40px; background: none; border: none; cursor: pointer;">
                                            <i class="fas fa-search" style="color: #007bff;"></i>
                                        </button>
                                    </div>
                                </form>
                            </div>
                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>Profile Pic</th>
                                            <th>Name</th>
                                            <th>Phone</th>
                                            <th>Email</th>
                                            <th>Country</th>
                                            <!-- <th>Listings</th> -->
                                            <th>View</th>
                                            <th>Edit</th>
                                            <th>Delete</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% if (allAgents && allAgents.length > 0) { %>
                                            <% allAgents.forEach((agent) => { %>
                                                <tr>
                                                    <td>
                                                        <span class="list-img">
                                                            <img src="<%= agent.profilePic ? '/Uploads/profiles/' + agent.profilePic : '/assets/images/favicon.png' %>" alt="Profile Picture">
                                                        </span>
                                                    </td>
                                                    <td>
                                                        <a href="#">
                                                            <span class="list-name">
                                                                <%= agent.firstName %> <%= agent.lastName %>
                                                            </span>
                                                        </a>
                                                    </td>
                                                    <td><%= agent.countryCode %> <%= agent.phone || 'N/A' %></td>
                                                    <td><%= agent.email || 'N/A' %></td>
                                                    <td><%= agent.country || 'N/A' %></td>
                                                    <!-- <td>
                                                        <span class="badge badge-primary">
                                                            <% if(agent.listing >= 10) { %>
                                                                <%= agent.listing %>
                                                            <% } else { %>
                                                                0<%= agent.listing %>
                                                            <% } %>
                                                        </span>
                                                    </td> -->
                                                    <td>
                                                        <span style="cursor: pointer;" class="badge badge-success" onclick="window.location.href='/viewAgent?agentId=<%= agent._id %>'" aria-label="View Agent"><i class="far fa-eye"></i></span>
                                                    </td>
                                                    <td>
                                                        <span style="cursor: pointer;" class="badge badge-success" onclick="window.location.href='/edit-agent?editAgentId=<%= agent._id %>'" aria-label="Edit Agent"><i class="far fa-edit"></i></span>
                                                    </td>
                                                    <td>
                                                        <span  style="cursor: pointer;" class="badge badge-danger delete-btn " data-itemId="<%= agent._id %>" aria-label="Delete agent"><i class="far fa-trash-alt"></i></span>
                                                    </td>
                                                </tr>
                                            <% }) %>
                                        <% } else { %>
                                            <tr>
                                                <td colspan="9" class="text-center text-muted">No Agents found.</td>
                                            </tr>
                                        <% } %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <%- include('../partials/pagination') %>
            </div>
          
            <%- include('../partials/Footer') %>
        </div>
    </div>

    <%- include('../partials/deletePopup', { entityName: 'Agent', deleteEndpoint: '/delete-agent', buttonClass: 'delete-btn' }) %>

    <%- include('../../shared/partials/toaster') %>

    <%- include('../partials/script.ejs') %>
    <script>
        document.addEventListener('DOMContentLoaded', () => {
    // Handle search form submission
    const searchForm = document.getElementById('search-form');
    const searchInput = document.getElementById('search-input');
    const statusFilterSelect = document.getElementById('status-filter');

    searchForm.addEventListener('submit', (e) => {
        e.preventDefault();
        const nameQuery = searchInput.value.trim();
        const statusFilter = statusFilterSelect.value;
        let url = `?page=1`;
        if (nameQuery) url += `&search=${encodeURIComponent(nameQuery)}`;
        if (statusFilter !== 'all') url += `&statusFilter=${encodeURIComponent(statusFilter)}`;
        window.location.href = url;
    });
});
</script>
</body>
</html>