<!doctype html>
<html lang="en">
<%- include('../partials/Header') %>
<body>
    <div id="container-wrapper">
        <div id="dashboard" class="dashboard-container">
            <%- include('../partials/Navbar') %>
            <%- include('../partials/Sidebar') %>
            <div class="db-info-wrap db-package-wrap">
                <div class="dashboard-box table-opp-color-box">
          
                    <div class="header-controls" style="display: flex; flex-direction: row; justify-content: space-between; align-items: center; gap: 10px; margin-bottom: 20px;">
                        <h4 style="margin: 0;">Packages List</h4>
                        <a href="/db-add-package" class="btn btn-primary" style="width: fit-content;" aria-label="Add new package">Add Package</a>
                    </div>
                    <div class="package-controls" style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px;">
                        <form id="search-form" action="/db-all-packages" method="get" style="flex: 1; margin-right: 20px;">
                            <div class="form-group" style="display: flex; align-items: center; position: relative;">
                                <input type="text" name="search" id="search-input" placeholder="Search by package name" value="<%= search || '' %>" style="width: 70%; padding: 8px 40px 8px 8px; border: 1px solid #ddd; border-radius: 4px; margin-right: 10px;">
                                       
                                <select name="statusFilter" id="status-filter" style="width: 30%; padding: 8px; border: 1px solid #ddd; border-radius: 4px;">
                                    <option value="all" <%= statusFilter === 'all' ? 'selected' : '' %>>All</option>
                                    <option value="Pending" <%= statusFilter === 'Pending' ? 'selected' : '' %>>Pending</option>
                                    <option value="Active" <%= statusFilter === 'Active' ? 'selected' : '' %>>Active</option>
                                    <option value="Expired" <%= statusFilter === 'Expired' ? 'selected' : '' %>>Expired</option>
                                </select>
                                <button type="submit" aria-label="Search applications" style="position: absolute; right: 40px; background: none; border: none; cursor: pointer;">
                                    <i class="fas fa-search" style="color: #007bff;"></i>
                                </button>
                            </div>
                        </form>
                    </div>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Trip Duration</th>
                                    <th>Package Type</th>
                                    <th>Destination</th>
                                    <th>Created By</th>
                                    <th>Status</th>
                                    <th>Updated By</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (allPackages && allPackages.length > 0) { %>
                                    <% allPackages.forEach(package => { %>
                                        <tr>
                                            <td><span class="package-name"><%= package.title %></span></td>
                                            <td>
                                                <%= package.tripDuration ? package.tripDuration.days + 'D ' + package.tripDuration.nights + 'N' : 'Not specified' %>

                                            </td>
                                            <td>
                                                <%= package.packageType ? package.packageType : 'Not specified' %>
                                            </td>
                                            <td><%= package.destinationCountry ? package.destinationCountry : 'Not specified' %></td>
                                            <td><%= package.createdBy ? `${package.createdBy.firstName} ${package.createdBy.lastName}` : 'Unknown' %></td>
                                            
                                            <td>
                                                <span class="badge badge-<%= package.status === 'Active' ? 'success' : package.status === 'Pending' ? 'primary' : 'danger' %>">
                                                    <%= package.status %>
                                                </span>
                                            </td>
                                            <td><%= package.updatedBy ? `${package.updatedBy.firstName} ${package.updatedBy.lastName}` : '' %></td>
                                            <td>
                                                <a href="/package-preview/<%= package._id %>" class="badge badge-info text-white" title="Preview Package"><i class="far fa-eye"></i></a>
                                                <span class="badge badge-success "  style="cursor: pointer;" onclick="window.location.href='/edit-package/<%= package._id %>'"><i class="far fa-edit"></i></span>
                                                <span class="badge badge-danger delete-btn"  style="cursor: pointer;" data-itemId="<%= package._id %>"><i class="far fa-trash-alt"></i></span>
                                            </td>
                                        </tr>
                                    <% }) %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="8" style="text-align: center;">No packages found.</td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>

             

            <%- include('../partials/pagination') %>
              
            </div>
    <%- include('../../shared/partials/toaster') %>

            <%- include('../partials/deletePopup', { entityName: 'Package', deleteEndpoint: '/delete-package', buttonClass: 'delete-btn' }) %>
            <%- include('../partials/Footer') %>
        </div>
    </div>
 
    <%- include('../partials/script.ejs') %>
    <script>
           document.addEventListener('DOMContentLoaded', () => {
        // Handle search form submission
        const searchForm = document.getElementById('search-form');
        const searchInput = document.getElementById('search-input');
        const statusFilterSelect = document.getElementById('status-filter');

        searchForm.addEventListener('submit', (e) => {
            e.preventDefault();
            const nameQuery = searchInput.value.trim();
            const statusFilter = statusFilterSelect.value;
            let url = `?page=1`;
            if (nameQuery) url += `&search=${encodeURIComponent(nameQuery)}`;
            if (statusFilter !== 'all') url += `&statusFilter=${encodeURIComponent(statusFilter)}`;
            window.location.href = url;
        });
    });
    </script>
</body>
</html>