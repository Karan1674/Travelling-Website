<!doctype html>
<html lang="en">
<%- include('../partials/Header') %>
<body>
    <div id="container-wrapper">
        <div id="dashboard" class="dashboard-container">
            <%- include('../partials/Navbar') %>
            <%- include('../partials/Sidebar') %>
            <div class="db-info-wrap db-package-wrap">
                <div class="dashboard-box table-opp-color-box">
                    <div class="header-controls" style="display: flex; flex-direction: row; justify-content: space-between; align-items: center; gap: 10px; margin-bottom: 20px;">
                        <h4 style="margin: 0;">Coupons List</h4>
                        <a href="/new-coupon" class="btn btn-primary" style="width: fit-content;" aria-label="Add new coupon">Add Coupon</a>
                    </div>
                    <div class="package-controls" style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px;">
                        <form id="search-form" action="/coupon-list" method="get" style="flex: 1; margin-right: 20px;">
                            <div class="form-group" style="display: flex; align-items: center; position: relative;">
                                <input type="text" name="search" id="search-input" placeholder="Search by coupon code" value="<%= search || '' %>" style="width: 100%; padding: 8px 40px 8px 8px; border: 1px solid #ddd; border-radius: 4px;">
                                <button type="submit" aria-label="Search coupons" style="position: absolute; right: 10px; background: none; border: none; cursor: pointer;">
                                    <i class="fas fa-search" style="color: #007bff;"></i>
                                </button>
                            </div>
                        </form>
                    </div>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Code</th>
                                    <th>Discount Type</th>
                                    <th>Discount Value</th>
                                    <th>Created By</th>
                                    <th>Expiry Date</th>
                                    <th>Status</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (coupons && coupons.length > 0) { %>
                                    <% coupons.forEach(coupon => { %>
                                        <tr>
                                            <td><span class="coupon-code"><%= coupon.code %></span></td>
                                            <td><%= coupon.discountType.toUpperCase() %></td>
                                            <td>
                                                <%= coupon.discountType === 'percentage' ? coupon.discountValue + '%' : '$' + coupon.discountValue.toFixed(2) %>
                                            </td>
                                            <td><%= coupon.createdBy ? `${coupon.createdBy.firstName} ${coupon.createdBy.lastName}` : 'Unknown' %></td>

                                            <td><%= new Date(coupon.expiryDate).toLocaleDateString() %></td>
                                            <td>
                                                <span class="badge badge-<%= coupon.isActive ? 'success' : 'danger' %>">
                                                    <%= coupon.isActive ? 'Active' : 'Inactive' %>
                                                </span>
                                            </td>
                                            <td>
                                                <a href="/coupon-details/<%= coupon._id %>" class="badge badge-info text-white" title="View Coupon"><i class="far fa-eye"></i></a>
                                                <span class="badge badge-success" style="cursor: pointer;" onclick="window.location.href='/edit-coupon/<%= coupon._id %>'"><i class="far fa-edit"></i></span>
                                                <span class="badge badge-danger delete-btn" style="cursor: pointer;" data-itemId="<%= coupon._id %>"><i class="far fa-trash-alt"></i></span>
                                            </td>
                                        </tr>
                                    <% }) %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="6" style="text-align: center;">No coupons found.</td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
                <%- include('../partials/pagination') %>
            </div>
            <%- include('../../shared/partials/toaster') %>
            <%- include('../partials/deletePopup', { entityName: 'Coupon', deleteEndpoint: '/delete-coupon', buttonClass: 'delete-btn' }) %>
            <%- include('../partials/Footer') %>
        </div>
    </div>
    <%- include('../partials/script.ejs') %>
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const searchForm = document.getElementById('search-form');
            const searchInput = document.getElementById('search-input');

            // Handle form submission
            searchForm.addEventListener('submit', (e) => {
                e.preventDefault();
                const query = searchInput.value.trim();
                window.location.href = `/coupon-list?search=${encodeURIComponent(query)}&page=1`;
            });
        });
    </script>
</body>
</html>