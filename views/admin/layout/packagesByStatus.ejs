<!doctype html>
<html lang="en">
<%- include('../partials/Header') %>
<body>
    <div id="container-wrapper">
        <div id="dashboard" class="dashboard-container">
            <%- include('../partials/Navbar') %>
            <%- include('../partials/Sidebar') %>
            <div class="db-info-wrap db-package-wrap">
                <div class="dashboard-box table-opp-color-box">
                
                    <div class="header-controls" style="display: flex; flex-direction: row; justify-content: space-between; align-items: center; gap: 10px; margin-bottom: 20px;">
                        <h4 style="margin: 0;"><%= pageTitle %></h4>
                        <a href="/db-add-package" class="btn btn-primary" style="width: fit-content;" aria-label="Add new user">Add Package</a>
                    </div>
                    <div class="package-controls" style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px;">
                        <form id="search-form" style="flex: 1; margin-right: 20px;">
                            <div class="form-group" style="display: flex; align-items: center; position: relative;">
                                <input type="text" name="search" id="search-input" placeholder="Search by package name" value="<%= search || '' %>" style="width: 100%; padding: 8px 40px 8px 8px; border: 1px solid #ddd; border-radius: 4px;">
                                <button type="submit" aria-label="Search users" style="position: absolute; right: 10px; background: none; border: none; cursor: pointer;">
                                    <i class="fas fa-search" style="color: #007bff;"></i>
                                </button>
                            </div>
                        </form>
                    </div>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Trip Duration</th>
                                    <th>Package Type</th>
                                    <th>Destination</th>
                                    <th>Status</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (allPackages && allPackages.length > 0) { %>
                                    <% allPackages.forEach(package => { %>
                                        <tr>
                                            <td><span class="package-name"><%= package.title %></span></td>
                                            <td>
                                                <%= package.tripDuration ? package.tripDuration.days + 'D ' + package.tripDuration.nights + 'N' : 'Not specified' %>

                                            </td>
                                            <td>
                                                <%= package.packageType ? package.packageType : 'Not specified' %>
                                            </td>
                                            <td><%= package.destinationCountry ? package.destinationCountry : 'Not specified' %></td>
                                            <td>
                                                <span class="badge badge-<%= package.status === 'Active' ? 'success' : package.status === 'Pending' ? 'primary' : 'danger' %>">
                                                    <%= package.status %>
                                                </span>
                                            </td>
                                            <td>
                                                <span class="badge badge-success" onclick="window.location.href='/edit-package/<%= package._id %>'"><i class="far fa-edit"></i></span>
                                                <span class="badge badge-danger delete-btn" data-itemId="<%= package._id %>"><i class="far fa-trash-alt"></i></span>
                                            </td>
                                        </tr>
                                    <% }) %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="6" style="text-align: center;">No packages found.</td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
                <%- include('../partials/pagination') %>
            </div>
            <%- include('../partials/deletePopup', { entityName: 'Package', deleteEndpoint: '/delete-package', buttonClass: 'delete-btn' }) %>

            <%- include('../partials/Footer') %>
        </div>
    </div>
    
    <%- include('../partials/script.ejs') %>
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const searchInput = document.getElementById('search-input');
            const deleteButtons = document.querySelectorAll('.delete-btn');

            // Handle search on Enter keypress
            searchInput.addEventListener('keypress', (e) => {
                if (e.key === 'Enter') {
                    e.preventDefault();
                    const query = searchInput.value.trim();
                    window.location.href = `?search=${encodeURIComponent(query)}&page=1`;
                }
            });
        });
    </script>
</body>
</html>