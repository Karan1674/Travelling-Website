<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- favicon -->
    <link rel="icon" type="image/png" href="/assets/images/favicon.png">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="admin/assets/css/bootstrap.min.css" media="all">
    <!-- Fonts Awesome CSS -->
    <link rel="stylesheet" type="text/css" href="admin/assets/css/all.min.css">
    <!-- google fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300;0,400;0,600;0,700;0,800;1,400&family=Raleway:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,400&display=swap" rel="stylesheet">
    <!-- Custom CSS -->
    <link rel="stylesheet" type="text/css" href="styles/adminStyles.css">
    <!-- Inline CSS for Custom Popup Styling -->
    <style>
        /* Overlay for the popup */
        .popup-overlay {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.8); /* Low opacity background */
            z-index: 10500; /* High z-index */
        }
        /* Popup container */
        .popup {
            display: none;
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background: #fff;
            border-radius: 5px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            z-index: 10501; /* Above overlay */
            max-width: 400px;
            width: 90%;
            padding: 20px;
        }
        /* Show popup and overlay */
        .popup-overlay.show, .popup.show {
            display: block;
        }
        /* Popup header */
        .popup-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 15px;
        }
        .popup-header h5 {
            margin: 0;
            font-size: 1.25rem;
        }
        .popup-close {
            background: none;
            border: none;
            font-size: 1.5rem;
            cursor: pointer;
        }
        /* Popup body */
        .popup-body {
            margin-bottom: 15px;
            font-size: 1rem;
        }
        /* Popup footer */
        .popup-footer {
            display: flex;
            justify-content: flex-end;
            gap: 10px;
        }
        /* Responsive adjustments */
        @media (max-width: 576px) {
            .popup {
                width: 95%;
            }
        }
    </style>
    <title>Travele | Travel & Tour HTML5 template</title>
</head>
<body>
    <!-- start Container Wrapper -->
    <div id="container-wrapper">
        <!-- Dashboard -->
        <div id="dashboard" class="dashboard-container">
            <%- include('../partials/Navbar') %>
            <%- include('../partials/Sidebar') %>
            <div class="db-info-wrap">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="dashboard-box table-opp-color-box">
                            <h4>User Details</h4>
                            <p>Airport Hotels The Right Way To Start A Short Break Holiday</p>
                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>User</th>
                                            <th>Name</th>
                                            <th>Phone</th>
                                            <th>Email</th>
                                            <th>Country</th>
                                            <th>Listings</th>
                                            <th>View</th>
                                            <th>Edit</th>
                                            <th>Delete</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% if (allUsers && allUsers.length > 0) { %>
                                            <% allUsers.forEach((user) => { %>
                                                <tr>
                                                    <td>
                                                        <span class="list-img">
                                                            <img src="<%= user.profilePic ? '/Uploads/' + user.profilePic : '/assets/images/favicon.png' %>" alt="Profile Picture">
                                                        </span>
                                                    </td>
                                                    <td>
                                                        <a href="#">
                                                            <span class="list-name">
                                                                <%= user.firstName %> <%= user.lastName %>
                                                            </span>
                                                        </a>
                                                    </td>
                                                    <td><%= user.countryCode %> <%= user.phone || 'N/A' %></td>
                                                    <td><%= user.email || 'N/A' %></td>
                                                    <td><%= user.country || 'N/A' %></td>
                                                    <td>
                                                        <span class="badge badge-primary">
                                                            <% if(user.listing >= 10) { %>
                                                                <%= user.listing %>
                                                            <% } else { %>
                                                                0<%= user.listing %>
                                                            <% } %>
                                                        </span>
                                                    </td>
                                                    <td>
                                                        <span class="badge badge-success" onclick="window.location.href='/edit-user?editUserId=<%= user._id %>'"><i class="far fa-eye"></i></span>
                                                    </td>
                                                    <td>
                                                        <span class="badge badge-success" onclick="window.location.href='/edit-user?editUserId=<%= user._id %>'"><i class="far fa-edit"></i></span>
                                                    </td>
                                                    <td>
                                                        <!-- Delete Button to Trigger Custom Popup -->
                                                        <span class="badge badge-danger delete-btn" data-userid="<%= user._id %>"><i class="far fa-trash-alt"></i></span>
                                                    </td>
                                                </tr>
                                            <% }) %>
                                        <% } else { %>
                                            <tr>
                                                <td colspan="9" class="text-center text-muted">No users found.</td>
                                            </tr>
                                        <% } %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Custom Delete Popup -->
            <div class="popup-overlay" id="deletePopupOverlay"></div>
            <div class="popup" id="deletePopup">
                <div class="popup-header">
                    <h5>Confirm Delete</h5>
                    <button class="popup-close" id="popupCloseBtn">&times;</button>
                </div>
                <div class="popup-body">
                    Are you sure you want to delete this user?
                </div>
                <div class="popup-footer">
                    <button type="button" class="btn btn-secondary" id="popupCancelBtn">Cancel</button>
                    <button type="button" class="btn btn-danger" id="popupConfirmDeleteBtn">Delete</button>
                </div>
            </div>

            <!-- Content / End -->
            <%- include('../partials/Footer') %>
        </div>
        <!-- Dashboard / End -->
    </div>
    <!-- end Container Wrapper -->

    <!-- Scripts -->
    <script src="admin/assets/js/jquery-3.2.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
    <script src="admin/assets/js/bootstrap.min.js"></script>
    <script src="admin/assets/js/canvasjs.min.js"></script>
    <script src="admin/assets/js/counterup.min.js"></script>
    <script src="admin/assets/js/jquery.slicknav.js"></script>
    <script src="admin/assets/js/dashboard-custom.js"></script>
    <script>
        // Vanilla JavaScript to handle the custom delete popup
        document.addEventListener('DOMContentLoaded', () => {
            const deleteButtons = document.querySelectorAll('.delete-btn');
            const popupOverlay = document.getElementById('deletePopupOverlay');
            const popup = document.getElementById('deletePopup');
            const cancelBtn = document.getElementById('popupCancelBtn');
            const closeBtn = document.getElementById('popupCloseBtn');
            const confirmDeleteBtn = document.getElementById('popupConfirmDeleteBtn');

            // Check if elements exist to prevent errors
            if (!popupOverlay || !popup || !cancelBtn || !closeBtn || !confirmDeleteBtn) {
                console.error('Popup elements not found');
                return;
            }

            // Function to show the popup
            const showPopup = () => {
                popupOverlay.classList.add('show');
                popup.classList.add('show');
            };

            // Function to hide the popup
            const hidePopup = () => {
                popupOverlay.classList.remove('show');
                popup.classList.remove('show');
                confirmDeleteBtn.removeAttribute('data-userid'); // Clear userId
            };

            // Add click event listener to each delete button
            deleteButtons.forEach(button => {
                button.addEventListener('click', () => {
                    const userId = button.getAttribute('data-userid');
                    if (userId) {
                        confirmDeleteBtn.setAttribute('data-userid', userId);
                        showPopup();
                    } else {
                        console.error('User ID not found on button');
                    }
                });
            });

            // Add click event listener to the confirm delete button
            confirmDeleteBtn.addEventListener('click', () => {
                const userId = confirmDeleteBtn.getAttribute('data-userid');
                if (userId) {
                    window.location.href = `/delete-user/${userId}`;
                    hidePopup();
                } else {
                    console.error('User ID not found on confirm button');
                }
            });

            // Add click event listener to the cancel button
            cancelBtn.addEventListener('click', hidePopup);

            // Add click event listener to the close button
            closeBtn.addEventListener('click', hidePopup);

            // Close popup when clicking outside (on the overlay)
            popupOverlay.addEventListener('click', hidePopup);
        });
    </script>
</body>
</html>